<Page
    x:Class="TickTackToe.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TickTackToe.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#7fffd4">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>
		<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="三目並べ" TextWrapping="NoWrap" TextAlignment="Center" FontSize="100"/>
		<Button Command="{Binding PvPCommand}" Content="VS プレイヤー" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="70" Width="320" FontSize="30" FontWeight="Bold"/>
		<Button Command="{Binding PvCCommand}" Content="VS CPU"  HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="70" Width="320" FontSize="30" FontWeight="Bold"/>
	</Grid>

</Page>
